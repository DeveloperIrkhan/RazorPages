@page
@model Razor_webapp.Pages.AddEmployeeModel
@{
}


<div class="container">
    <form enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row form-group">
            <div class="col-12">
                <label asp-for="@Model.Employee.Name" class="control-label"></label>
                <input asp-for="@Model.Employee.Name" class="form-control" placeholder="Enter Your Name" />
                <span asp-validation-for="@Model.Employee.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-12">
                <label asp-for="@Model.Employee.PhoneNo" class="control-label"></label>
                <input asp-for="@Model.Employee.PhoneNo" class="form-control" placeholder="Enter Your Email" />
                <span asp-validation-for="@Model.Employee.PhoneNo" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-12">
                <label asp-for="@Model.Employee.designation" class="col-form-label">
                </label>
                @*<select asp-for="@Model.Employee.designation" class="form-control custom-select mt-2"
                        asp-items="Html.GetEnumSelectList<@Model.Employee.designation>()">
                    <option value="">-Please Select-</option>
                </select>
                @Html.ValidationMessageFor(model => model.designation, "",
                    new { @class = "text-danger small" })*@
            </div>
        </div>

        <div class="row form-group">
            <div class="col-12">
                <label asp-for="@Model.Employee.PhotoPath" class="col-form-label"></label>
                <div class="custom-file">
                    <input asp-for="@Model.Employee.PhotoPath" class="btn btn-danger custom-file-input" />
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>
        <div class="row form-group ">
            <div class="col-12">
                <button class="btn btn-dark float-right" type="submit">Submit Record</button>
            </div>
        </div>

    </form>
</div>
